<resources>
    <!-- Base application theme. -->
    <style name="Theme.SatelliteFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#2E3149</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SatelliteFinder.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#2E3149</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="myAdTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/app_bg</item>
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">#4C4F6B</item>
        <item name="itemTextColor">#4C4F6B</item>
        <item name="android:background">@drawable/drawer_bg</item>
    </style>

</resources>